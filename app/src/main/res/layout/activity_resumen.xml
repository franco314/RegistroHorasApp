<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="24dp"
    android:background="@android:color/white">

    <TextView
        android:id="@+id/tvTituloSemana"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Resumen Semanal"
        android:textSize="28sp"
        android:textStyle="bold"
        android:textColor="@color/rojoCarrefour"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:gravity="center"/>

    <TextView
        android:id="@+id/tvHorasSemana"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Horas trabajadas en la semana: 0"
        android:textSize="20sp"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@id/tvTituloSemana"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/tvHorasExtraSemana"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Horas extras esta semana: 0"
        android:textSize="20sp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/tvHorasSemana"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <View
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:background="#CCCCCC"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@id/tvHorasExtraSemana"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/tvTituloMes"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Resumen Mensual"
        android:textSize="28sp"
        android:textStyle="bold"
        android:textColor="@color/rojoCarrefour"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@id/tvHorasExtraSemana"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:gravity="center"/>

    <TextView
        android:id="@+id/tvTotalHoras"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Total horas trabajadas: 0"
        android:textSize="20sp"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@id/tvTituloMes"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/tvHorasExtras"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Horas extras realizadas: 0"
        android:textSize="20sp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/tvTotalHoras"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <Button
        android:id="@+id/btnCerrar"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:text="Cerrar"
        android:textColor="@android:color/white"
        android:backgroundTint="@color/rojoCarrefour"
        android:layout_marginTop="48dp"
        app:layout_constraintTop_toBottomOf="@id/tvHorasExtras"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>
