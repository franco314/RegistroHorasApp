<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Tema base de la app - SIEMPRE modo claro -->
    <style name="Theme.RegistroHorasApp" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Color primario principal -->
        <item name="colorPrimary">@color/primary</item>
        <!-- Variante para estados mÃ¡s oscuros (botones presionados, etc.) -->
        <item name="colorPrimaryVariant">@color/primary_dark</item>
        <!-- Color del texto/iconos sobre colorPrimary -->
        <item name="colorOnPrimary">@color/white</item>
        <!-- Color secundario para elementos de acento -->
        <item name="colorSecondary">@color/accent</item>
        <!-- Fondo de la ventana -->
        <item name="android:windowBackground">@color/background_primary</item>
        <!-- Color del texto principal (sobre fondo blanco) -->
        <item name="android:textColorPrimary">@color/text_primary</item>
        <!-- Color para botones y controles secundarios -->
        <item name="colorSecondaryVariant">@color/accent_secondary</item>
        <!-- Color de hint para EditText -->
        <item name="android:textColorHint">@color/text_hint</item>
        <!-- Color de superficie para cards y elementos elevados -->
        <item name="colorSurface">@color/background_primary</item>
        <!-- Color de error -->
        <item name="colorError">@color/error</item>
        <!-- Color de texto sobre superficie -->
        <item name="colorOnSurface">@color/text_primary</item>
    </style>

</resources>
